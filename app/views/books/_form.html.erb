<%= form_for @book, :html => { :class => "form-horizontal book" } do |f| %>

  <% if @book.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @book.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'Наименование', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :book_title, :class => 'form-control' %>
    </div>
    <%=f.error_span(:book_title) %>
  </div>
  <div class="form-group">
    <%= f.label 'Автор', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :book_author, :class => 'form-control' %>
    </div>
    <%=f.error_span(:book_author) %>
  </div>
  <div class="form-group">
    <%= f.label 'Шифр', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :book_code, :class => 'form-control' %>
    </div>
    <%=f.error_span(:book_code) %>
  </div>
  <div class="form-group">
    <%= f.label 'Издательство', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :book_publisher, :class => 'form-control' %>
    </div>
    <%=f.error_span(:book_publisher) %>
  </div>
  <div class="form-group">
    <%= f.label 'Год издания', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.number_field :book_public_year, :class => 'form-control' %>
    </div>
    <%=f.error_span(:book_public_year) %>
  </div>
  <div class="form-group">
    <%= f.label 'Цена', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.number_field :book_price, in: 0.01..9999.99, :class => 'form-control' %>
    </div>
    <%=f.error_span(:book_price) %>
  </div>
  <div class="form-group">
    <%= f.label 'Дата поступления', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.date_field :book_receipt_date, :class => 'form-control' %>
    </div>
    <%=f.error_span(:book_receipt_date) %>
  </div>
  <div class="form-group">
    <%= f.label 'Библиотека', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_select(:library_id, Library.all, :id, :lib_name, {include_blank: true}, :class => 'form-control') %>
    </div>
    <%=f.error_span(:library_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                books_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
