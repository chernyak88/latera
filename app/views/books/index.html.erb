<%- model_class = Book -%>
<div class="page-header">
  <h1>Книги</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th>Наименование</th>
      <th>Автор</th>
      <th>Шифр</th>
      <th>Издательство</th>
      <th>Год издания</th>
      <th>Цена</th>
      <th>Дата поступления</th>
      <th>Библиотека (id)</th>
      <th>Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.id, book_path(book) %></td>
        <td><%= book.book_title %></td>
        <td><%= book.book_author %></td>
        <td><%= book.book_code %></td>
        <td><%= book.book_publisher %></td>
        <td><%= book.book_public_year %></td>
        <td><%= book.book_price %></td>
        <td><%= book.book_receipt_date %></td>
        <td><%= book.library_id %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      book_path(book), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_book_path(book), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      book_path(book),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_book_path,
            :class => 'btn btn-primary' %>
