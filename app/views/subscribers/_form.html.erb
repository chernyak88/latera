<%= form_for @subscriber, :html => { :class => "form-horizontal subscriber" } do |f| %>

  <% if @subscriber.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@subscriber.errors.count, "error") %> prohibited this subscriber from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @subscriber.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'Номер билета', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.number_field :sub_ticket, :class => 'form-control' %>
    </div>
    <%=f.error_span(:sub_ticket) %>
  </div>
  <div class="form-group">
    <%= f.label 'Фамилия', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :sub_surname, :class => 'form-control' %>
    </div>
    <%=f.error_span(:sub_surname) %>
  </div>
  <div class="form-group">
    <%= f.label 'Имя', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :sub_name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:sub_name) %>
  </div>
  <div class="form-group">
    <%= f.label 'Отчество', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :sub_patronymic, :class => 'form-control' %>
    </div>
    <%=f.error_span(:sub_patronymic) %>
  </div>
  <div class="form-group">
    <%= f.label 'Адрес', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :sub_address, :class => 'form-control' %>
    </div>
    <%=f.error_span(:sub_address) %>
  </div>
  <div class="form-group">
    <%= f.label 'Телефон', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.telephone_field :sub_phone, :class => 'form-control' %>
    </div>
    <%=f.error_span(:sub_phone) %>
  </div>
  <div class="form-group">
    <%= f.label 'Библиотека', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_select(:library_id, Library.all, :id, :lib_name, {include_blank: true}, :class => 'form-control') %>
    </div>
    <%=f.error_span(:library_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                subscribers_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
