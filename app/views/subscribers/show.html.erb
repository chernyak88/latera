<%- model_class = Subscriber -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name('Номер билета') %>:</strong></dt>
  <dd><%= @subscriber.sub_ticket %></dd>
  <dt><strong><%= model_class.human_attribute_name('Фамилия') %>:</strong></dt>
  <dd><%= @subscriber.sub_surname %></dd>
  <dt><strong><%= model_class.human_attribute_name('Имя') %>:</strong></dt>
  <dd><%= @subscriber.sub_name %></dd>
  <dt><strong><%= model_class.human_attribute_name('Отчество') %>:</strong></dt>
  <dd><%= @subscriber.sub_patronymic %></dd>
  <dt><strong><%= model_class.human_attribute_name('Адрес') %>:</strong></dt>
  <dd><%= @subscriber.sub_address %></dd>
  <dt><strong><%= model_class.human_attribute_name('Телефон') %>:</strong></dt>
  <dd><%= @subscriber.sub_phone %></dd>
  <dt><strong><%= model_class.human_attribute_name('Библиотека') %>:</strong></dt>
  <dd><%= @subscriber.library_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              subscribers_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_subscriber_path(@subscriber), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              subscriber_path(@subscriber),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
