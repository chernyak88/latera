<%- model_class = Subscriber -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:sub_ticket) %></th>
      <th><%= model_class.human_attribute_name(:sub_surname) %></th>
      <th><%= model_class.human_attribute_name(:sub_name) %></th>
      <th><%= model_class.human_attribute_name(:sub_patronymic) %></th>
      <th><%= model_class.human_attribute_name(:sub_address) %></th>
      <th><%= model_class.human_attribute_name(:sub_phone) %></th>
      <th><%= model_class.human_attribute_name(:library_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @subscribers.each do |subscriber| %>
      <tr>
        <td><%= link_to subscriber.id, subscriber_path(subscriber) %></td>
        <td><%= subscriber.sub_ticket %></td>
        <td><%= subscriber.sub_surname %></td>
        <td><%= subscriber.sub_name %></td>
        <td><%= subscriber.sub_patronymic %></td>
        <td><%= subscriber.sub_address %></td>
        <td><%= subscriber.sub_phone %></td>
        <td><%= subscriber.library_id %></td>
        <td><%=l subscriber.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      subscriber_path(subscriber), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_subscriber_path(subscriber), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      subscriber_path(subscriber),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_subscriber_path,
            :class => 'btn btn-primary' %>
