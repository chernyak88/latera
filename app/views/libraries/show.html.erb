<%- model_class = Library -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name('Номер') %>:</strong></dt>
  <dd><%= @library.lib_num %></dd>
  <dt><strong><%= model_class.human_attribute_name('Наименование') %>:</strong></dt>
  <dd><%= @library.lib_name %></dd>
  <dt><strong><%= model_class.human_attribute_name('Адрес') %>:</strong></dt>
  <dd><%= @library.lib_address %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              libraries_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_library_path(@library), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              library_path(@library),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
