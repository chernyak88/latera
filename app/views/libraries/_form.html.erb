<%= form_for @library, :html => { :class => "form-horizontal library" } do |f| %>

  <% if @library.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@library.errors.count, "error") %> prohibited this library from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @library.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'Номер', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :lib_num, :class => 'form-control' %>
    </div>
    <%=f.error_span(:lib_num) %>
  </div>
  <div class="form-group">
    <%= f.label 'Наименование', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :lib_name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:lib_name) %>
  </div>
  <div class="form-group">
    <%= f.label 'Адрес', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :lib_address, :class => 'form-control' %>
    </div>
    <%=f.error_span(:lib_address) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                libraries_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
