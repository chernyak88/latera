<%- model_class = Library -%>
<div class="page-header">
  <h1>Библиотеки</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th>Номер</th>
      <th>Наименование</th>
      <th>Адрес</th>
      <th>Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @libraries.each do |library| %>
      <tr>
        <td><%= link_to library.id, library_path(library) %></td>
        <td><%= library.lib_num %></td>
        <td><%= library.lib_name %></td>
        <td><%= library.lib_address %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      library_path(library), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_library_path(library), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      library_path(library),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_library_path,
            :class => 'btn btn-primary' %>
